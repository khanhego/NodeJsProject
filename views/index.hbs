    <a>List User</a>
    <ul class="list-group">
        {{#each model}}
            <li class="list-group-item">
                <a href="/remove?id={{_id}}">Delete</a> 
            <a href="/showDataUser?id={{_id}}">Update </a>
              {{name}}  </li>
        {{/each}} 
    </ul>
     <a>List Product</a>
