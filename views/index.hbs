        {{#each list}}
            <li class="list-group-item"><a href="/remove?id={{_id}}">Delete</a> 
            <a href="/editDataProduct?id={{_id}}">Update </a>
              {{name}} / {{category}} /{{price}}  </li>
        {{/each}} 
    </ul>
    <a>Category</a>
    <ul class="list-group">
        {{#each category}}
            <li class="list-group-item"> 
                <a href="/remove?id={{_id}}">Update </a>
                <a href="/filterCategory?name={{name}}">{{name}}</a> 
              </li>
        {{/each}} 
    </ul>
